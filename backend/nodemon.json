{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts"],
  "exec": "ts-node -r tsconfig-paths/register src/app.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colors": true,
  "runOnChangeOnly": false,
  "verbose": true,
  "delay": 1000
}
